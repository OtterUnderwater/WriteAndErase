<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WriteAndErase.Views.HomeView"
			 xmlns:vm="using:WriteAndErase.ViewModels"
			 x:DataType="vm:HomeViewModel">
	
	<Grid RowDefinitions="auto, auto, *">
		<Grid Grid.Row="0" Margin="10">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
				<Image Width="30" Height="30" Source="/Assets/logo.png" VerticalAlignment="Center"/>
				<TextBlock Text="Пиши-стирай" Margin="10 0" Classes="H1" VerticalAlignment="Center"/>
			</StackPanel>
			<Button Content="Выйти" Command="{Binding GoAuthCommand}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
			<TextBlock Text="{Binding Name}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
		</Grid>
		<StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
			<Button Content="Работа с заказами (МЕНЕДЖЕР И АДМИН)" Command=""
					HorizontalAlignment="Left" VerticalAlignment="Center" />
		</StackPanel>
		<UserControl Grid.Row="2" Content="{Binding UCChildren}"/>
	</Grid>
	
</UserControl>
